{
  "kind": "collectionType",
  "collectionName": "quiz_sets",
  "info": {
    "singularName": "quiz-set",
    "pluralName": "quiz-sets",
    "displayName": "Quiz Set",
    "description": "A collection of quiz questions grouped together"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text"
    },
    "questions": {
      "type": "json",
      "required": true
    },
    "timeLimit": {
      "type": "integer",
      "required": true,
      "default": 600
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["easy", "medium", "hard"],
      "default": "medium"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isDaily": {
      "type": "boolean",
      "default": false
    },
    "dailyDate": {
      "type": "date"
    },
    "pointsMultiplier": {
      "type": "decimal",
      "default": 1.0
    },
    "category": {
      "type": "string"
    },
    "language": {
      "type": "enumeration",
      "enum": ["en", "pl", "de", "fr", "es"],
      "default": "en"
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "statistics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz-set-statistic.quiz-set-statistic",
      "mappedBy": "quizSet"
    }
  }
}
