{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "@types/jest", "node"],
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
