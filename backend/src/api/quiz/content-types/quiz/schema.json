{
  "kind": "collectionType",
  "collectionName": "quizzes",
  "info": {
    "singularName": "quiz",
    "pluralName": "quizzes",
    "displayName": "Quiz",
    "description": "Enhanced quiz system with competition features"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "question": {
      "type": "text",
      "required": true
    },
    "correctAnswer": {
      "type": "text",
      "required": true
    },
    "options": {
      "type": "json"
    },
    "type": {
      "type": "enumeration",
      "enum": ["multiple-choice", "text-input"],
      "default": "multiple-choice"
    },
    "points": {
      "type": "integer",
      "default": 10,
      "min": 1,
      "max": 100
    },
    "timeLimit": {
      "type": "integer",
      "default": 30,
      "min": 10,
      "max": 300
    },
    "isDaily": {
      "type": "boolean",
      "default": false
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["easy", "medium", "hard"],
      "default": "medium"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "quizzes"
    }
  }
}
